<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/username_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">

            <EditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"
                android:inputType="textEmailAddress" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/password_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColorHint="@color/card_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/TextAppearance.Design.Error"
            app:hintAnimationEnabled="true"
            app:hintEnabled="true">

            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />
        </android.support.design.widget.TextInputLayout>

        <EditText
            android:id="@+id/imaphost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Imap host"
            android:inputType="text" />

        <EditText
            android:id="@+id/imapPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Imap port"
            android:inputType="number" />

        <EditText
            android:id="@+id/smtphost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Smtp host"
            android:inputType="text" />

        <EditText
            android:id="@+id/smtpPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Smtp port"
            android:inputType="number" />

        <Button
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="Sign Up"
            android:textColor="@color/colorAccent"
            android:textSize="25sp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
